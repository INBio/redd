<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.devMode" value="true" />

	<package name="default" extends="struts-default" namespace="/">

		<!-- Application Home -->
		<action name="index" class="redd.HomeAction"
			method="execute">
			<interceptor-ref name="i18n" />
			<interceptor-ref name="basicStack" />
			<result name="SUCCESS">index.jsp</result>
		</action>
		<!-- Application Home -->
		<action name="grab" class="redd.HomeAction"
			method="grab">
			<interceptor-ref name="i18n" />
			<interceptor-ref name="basicStack" />
			<result name="SUCCESS">sample1.jsp</result>
		</action>	
		<action name="compare" class="redd.HomeAction"
			method="compare">
			<interceptor-ref name="i18n" />
			<interceptor-ref name="basicStack" />
			<result name="SUCCESS">sample2.jsp</result>
		</action>			
	</package>

	<package name="grab" extends="struts-default">
		<action name="index" class="redd.GrabAction">
			<result>/sample1.jsp</result>
		</action>
	</package>

</struts>